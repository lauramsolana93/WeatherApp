<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lms.wheatherapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.lms.weatherapp.WeatherApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_weeather"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_weeather_round"
        android:supportsRtl="true"
        android:theme="@style/WeatherApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.lms.weatherapp.ui.activities.SplashActivityCompose"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lms.weatherapp.ui.activities.MainActivityCompose"
            android:exported="true"></activity>
    </application>

</manifest>